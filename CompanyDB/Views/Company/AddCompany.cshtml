@using CompanyDB.ViewModel;
@model Company
@{
    ViewData["Title"] = "AddCompany";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* <h1>AddCompany</h1> *@

<div class="container">
    <form method="post" enctype="multipart/form-data" asp-action="AddCompany">
        <h3 class="display-5">Add a company</h3>
        <div class="form-group">
            <label asp-for="CompanyName"></label>
            <input asp-for="CompanyName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="CompanyEmail"></label>
            <input asp-for="CompanyEmail" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CompanyLogo"></label>
            <input asp-for="CompanyLogo" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="CompanyWebsite"></label>
            <input asp-for="CompanyWebsite" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Add Company" class="btn btn-primary" />
        </div>
       
