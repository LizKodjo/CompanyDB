@model CompanyModel

<div class="card mb-4 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.CompanyLogo) ? "/images/icons8-no-image-50.png" : Model.CompanyLogo) class="img-thumbnail" />
    <div class="bd-placeholder-img card-img-top" width="100%" height="225">
        <div class="card-body">
            <h3 class="card-title">@(string.IsNullOrEmpty(Model.CompanyName) ? "Name is not available" : Model.CompanyName) </h3>
            <p class="card-text">@(string.IsNullOrEmpty(Model.CompanyEmail) ? "Email is not available" : Model.CompanyEmail)</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a asp-route="companyDetailsRoute" asp-route-id="@Model.CompanyID" 
                    class="btn btn-sm btn-outline-secondary">View details</a>
                </div>
                <small class="text-muted">@(string.IsNullOrEmpty(Model.CompanyWebsite) ? "Not available" : Model.CompanyWebsite)</small>
            </div>
        </div>
    </div>
</div>
